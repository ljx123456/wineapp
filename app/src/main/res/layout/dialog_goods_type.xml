<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:orientation="vertical"
            android:background="@drawable/layout_goods_type_bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="97.5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="132dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="28dp"
                    android:maxLines="2"
                    android:text="1664 白啤酒法国经典小麦嘉士伯官方精酿"
                    android:textColor="#ff222222"
                    android:textSize="13dp"
                    android:id="@+id/tv_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="132dp"
                    android:text="规格：500ml*1罐"
                    android:textColor="#ff888888"
                    android:textSize="11dp"
                    android:id="@+id/tv_unit"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="54dp"
                    android:text="200.00"
                    android:textColor="#fff61c1c"
                    android:textSize="16dp"
                    android:id="@+id/tv_price"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_price"
                    android:layout_marginRight="2dp"
                    android:layout_alignBaseline="@+id/tv_price"
                    android:text="¥"
                    android:textColor="#fff61c1c"
                    android:textSize="12dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:background="#1a000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:text="购买方式"
                android:textColor="#ff555555"
                android:textSize="13dp"/>
            
            <yongchao.com.wineapp.utils.view.tag.MultiLineChooseLayout
                android:id="@+id/chooseTag"
                style="@style/SingleChooseTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="48dp"
                android:background="#D3AA71"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="16dp"
                android:id="@+id/tv_sure"/>


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:riv_corner_radius="4dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>