<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/tabbar_button_back"
        android:id="@+id/back"/>

    <View
        android:layout_width="4dp"
        android:layout_height="32dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="32dp"
        android:background="#D3AA71"
        android:id="@+id/view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@+id/view"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ff222222"
        android:textSize="24dp"
        android:layout_marginLeft="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="200dp"
        android:theme="@style/inputStyle"
        android:inputType="number"
        android:maxLength="11"
        android:hint="请输入您的手机号"
        android:textSize="16dp"
        android:textColorHint="#cccccc"
        android:textColor="#222222"
        android:id="@+id/edit_login_phone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/edit_login_phone"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/login_btn_bg"
        android:enabled="false"
        android:text="获取验证码"
        android:textColor="#ffffffff"
        android:textSize="16dp"
        android:id="@+id/btn"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即代表您已同意"
            android:textColor="#ff888888"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="《注册协议及隐私政策》"
            android:textColor="#1CA0F6"
            android:textSize="12dp"
            android:id="@+id/tv_agreement"/>
    </LinearLayout>

</RelativeLayout>