<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/tabbar_button_back"
            android:scaleType="centerInside"
            android:id="@+id/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="跳过绑定"
            android:textColor="#a6222222"
            android:textSize="14dp"
            android:id="@+id/tv_skip"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp">
        <View
            android:layout_width="4dp"
            android:layout_height="32dp"

            android:layout_marginLeft="32dp"
            android:background="#D3AA71"
            android:id="@+id/view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"

            android:layout_toRightOf="@+id/view"
            android:gravity="center"
            android:text="绑定经销商"
            android:textColor="#ff222222"
            android:textSize="24dp"
            android:layout_marginLeft="4dp"/>

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/edit_bind_bg"
        android:theme="@style/inputStyle"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:maxLines="1"
        android:hint="输入经销商的邀请码以完成绑定"
        android:textColorHint="#ff888888"
        android:textColor="#222222"
        android:textSize="12dp"
        android:id="@+id/edit_bind"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="#CCCCCC"
        android:text="立即绑定"
        android:textColor="#ffffffff"
        android:textSize="16dp"
        android:enabled="false"
        android:id="@+id/btn_bind"/>



</LinearLayout>