<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="49dp"
    android:orientation="horizontal">

    <android.support.v7.widget.RecyclerView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:id="@+id/lv"></android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:text="价格"
                android:textColor="#ff888888"
                android:textSize="13dp"
                android:paddingTop="3dp"
                android:paddingBottom="19dp"
                android:drawableRight="@mipmap/topnav_icon_sort_nor"
                android:drawablePadding="2dp"
                android:id="@+id/tv_price"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="72dp"
                android:text="综合"
                android:textColor="#ffd3aa71"
                android:textSize="13dp"
                android:paddingTop="3dp"
                android:paddingBottom="19dp"
                android:id="@+id/tv_all"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:id="@+id/recy"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>