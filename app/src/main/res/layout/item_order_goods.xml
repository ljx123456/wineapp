<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:riv_corner_radius="4dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:id="@+id/iv_goods"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_goods"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="1664 白啤酒法国经典"
            android:textColor="#ff222222"
            android:textSize="14dp"
            android:id="@+id/tv_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/iv_goods"
            android:layout_marginLeft="16dp"
            android:text="规格：500ml*1罐"
            android:textColor="#ff888888"
            android:textSize="11dp"
            android:id="@+id/tv_type"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_type"
            android:layout_marginLeft="58dp"
            android:layout_alignBaseline="@+id/tv_type"
            android:text="单位：箱(12罐)"
            android:textColor="#ff888888"
            android:textSize="11dp"
            android:id="@+id/tv_unit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_type"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/iv_goods"
            android:layout_marginLeft="16dp"
            android:text="价格：¥ 200.00"
            android:textColor="#ff888888"
            android:textSize="11dp"
            android:id="@+id/tv_price"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_unit"
            android:layout_below="@+id/tv_unit"
            android:layout_marginTop="2dp"
            android:text="数量：x 1"
            android:textColor="#ff888888"
            android:textSize="11dp"
            android:id="@+id/tv_num"/>
    </RelativeLayout>

    <Button
        android:layout_width="70dp"
        android:layout_height="28dp"
        android:layout_gravity="right"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/btn_order_comment_bg"
        android:text="评价"
        android:textColor="#ff555555"
        android:textSize="13dp"
        android:id="@+id/btn_comment"
        android:visibility="visible"/>
    
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f2f2f2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>

    

</LinearLayout>